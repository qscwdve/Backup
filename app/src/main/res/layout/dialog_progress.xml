<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/dialog_progress_title"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="백업 파일 생성"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/dialog_progress_cancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_cancel"/>

    <TextView
        android:id="@+id/dialog_progress_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="0%"
        android:layout_marginVertical="20dp"
        android:layout_below="@+id/dialog_progress_title"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"/>

    <ProgressBar
        android:layout_below="@+id/dialog_progress_percent"
        android:layout_centerHorizontal="true"
        android:id="@+id/dialog_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="250sp"
        android:layout_height="20dp"
        android:progressDrawable="@drawable/progressbar_custom"
        android:progress="0" />
</RelativeLayout>