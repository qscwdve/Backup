<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/item_file_parent"
    android:background="@drawable/rectangle_white_to_gray_ripple">

    <ImageView
        android:id="@+id/item_file_img"
        android:padding="15dp"
        android:src="@drawable/file"
        android:layout_width="100dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_toEndOf="@+id/item_file_img"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginVertical="10dp"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_file_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="제목"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/item_file_content"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목제목"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#AAA3A3A3"/>
</RelativeLayout>